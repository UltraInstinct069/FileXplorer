<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.afa.filexplorer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/unnamed"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Gallery"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewImage"
            android:label="@string/title_activity_view_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Musics"
            android:label="@string/title_activity_musics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Video"
            android:label="@string/title_activity_video"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Play_video"
            android:label="@string/title_activity_play_video"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TextFiles"
            android:label="@string/title_activity_text_files"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Aplications"
            android:label="@string/title_activity_aplications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SdCard"
            android:label="@string/title_activity_sd_card"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Download"
            android:label="@string/title_activity_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTexts"
            android:label="@string/title_activity_show_texts"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
